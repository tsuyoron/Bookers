  <body>
    <h1>Books</h1>
    <table>
      <thead>
          <tr>
              <th scope="columns">Title</th>
              <th scope="columns">Body</th>
              <th scope="columns" colspan="3"></th>
          </tr>
      </thead>
      <tbody>
          <% @books.each do |book|%>
          <tr>
              <td class="td_title">
                <%= book.title %>
              </td>
              <td class="tb_body">
                <%= book.body %>
              </td>
              <td>
                <%= link_to("Show","books/#{book.id}") %>
              </td>
              <td>
                <%= link_to("Edit","books/#{book.id}/edit") %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>
    <div id="error_explanation">
    <% if @book.errors.any? %>
        <%= @book.errors.count %>
        errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <%= form_with model: @book do |f| %>
    <div class="field">
      <div class="field_with_errors">
        <label for="book_title">Title</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="field">
      <div class="field_with_errors">
        <label for="book_body">Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>
      <div class="actions">
        <%= f.submit 'Create Book'%>
      </div>
    </div>
    <% end %>
  </body>