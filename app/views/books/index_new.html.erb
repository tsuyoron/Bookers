  <body>
    <h1>Books</h1>
    <table>
      <thead>
          <tr>
              <th scope="columns">Title</th>
              <th scope="columns">Body</th>
              <th scope="columns" colspan="3"></th>
          </tr>
      </thead>
      <tbody>
          <% @books.each do |book|%>
          <tr>
              <td class="td_title">
                <%= book.title %>
              </td>
              <td class="tb_body">
                <%= book.body %>
              </td>
              <td>
                <%= link_to("Show","books/#{book.id}") %>
              </td>
              <td>
                <%= link_to("Edit","books/#{book.id}/edit") %>
              </td>
              <td>
                <%= link_to("Destroy","books/#{book.id}/destroy") %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book'%>
      </div>
    <% end %>
  </body>