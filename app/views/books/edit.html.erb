<body>

  <h1>Editing Book</h1>
    <div id="error_explanation">
    <% if @book.errors.any? %>
        <%= @book.errors.count %>
        errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <%= form_with model: @book do |f| %>
    <div class="field">
      <div class="field_with_errors">
        <label for="book_title">Title</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="field">
      <div class="field_with_errors">
        <label for="book_body">Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>
      <div class="actions">
        <%= f.submit 'Update Book'%>
      </div>
    </div>
    <% end %>

  <%= link_to "Show", "/books/#{params[:id]}" %>
  <span>|</span>
  <%= link_to "Back", "/books" %>
</body>
